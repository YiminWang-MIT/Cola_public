.PHONY : all clean lib veryclean distclean

srcdir	= @srcdir@
VPATH	= @srcdir@

include	../../Makefile.inc

EXP	= abcn
CXXFLAGS= $(OPTS) $(WARN) -fno-strict-aliasing $(ROOT_CFLAGS)
LDFLAGS	= $(ROOT_LIBS) $(OPTS)
CPPFLAGS= -I$(srcdir) -I$(topdir) -I$(topdir)/Cola/include -I$(incdir) -I.. -I../.. -I. 

libobjs	= base.o dlrawtree.o generatortree.o radiative_helpers.o radiative.o
library	= libElasticRadiative.a


all:	lib

lib:	$(library)

$(library) :	$(libobjs)
	@ ar -crv $@ $^
	$(RANLIB) $@

clean :
	rm -rf *~ *.o

veryclean :	clean
	rm -f $(library) $(QSPIN)

distclean:	veryclean
	rm -f Makefile

-include $(libobjs:%.o=.%.depend)
