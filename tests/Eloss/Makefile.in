srcdir	= @srcdir@
VPATH	= @srcdir@

include ../../Makefile.inc

CPPFLAGS = -I$(topdir)
CXXFLAGS = -g -Wall -O2
LDFLAGS = -g -O2 -L$(libdir)

all:	CMaterial

CMaterial:	CMaterial.o ../../Cola/Material.o \
	../../Cola/Masses.o ../../Cola/QuasiRandom.o
	$(CXX) $(LDFLAGS) -o $@ $^ -l4vec

